PORT=3001
NODE_ENV=development
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://lightexec:lightexec_password@localhost:5432/lightexec_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin Default Credentials (change after first login!)
ADMIN_EMAIL=admin@lightexec.com
ADMIN_PASSWORD=admin123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# Container Settings
MAX_CONCURRENT_CONTAINERS=10000
CONTAINER_TIMEOUT_MS=10000
MAX_MEMORY_MB=128
MAX_CPU_CORES=1
MAX_OUTPUT_SIZE_KB=1024
MAX_PIDS=64

# Pre-warming
PREWARM_POOL_SIZE=50

# Security
ENABLE_SECCOMP=true
ENABLE_APPARMOR=true
DROP_ALL_CAPABILITIES=true
READ_ONLY_ROOT=true

# Logging
LOG_LEVEL=info
